{
  "name": "ts-html-app",
  "version": "1.0.0",
  "scripts": {
    "build": "esbuild src/scripts/main.ts --bundle --outfile=dist/bundle.js --format=esm --sourcemap",
    "watch": "esbuild src/scripts/main.ts --bundle --outfile=dist/bundle.js --format=esm --sourcemap --watch",
    "dev": "concurrently -k \"pnpm:watch\" \"pnpm:start\"",
    "start": "live-server --open=./index.html --watch=./"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "concurrently": "9.1.2",
    "cypress": "15.1.0",
    "esbuild": "0.25.3",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-extended": "6.0.0",
    "live-server": "1.2.2",
    "ts-jest": "^29.4.4",
    "typescript": "5.8.3"
  }
}